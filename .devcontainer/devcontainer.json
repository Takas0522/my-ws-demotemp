// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java-postgres
{
	"name": "Java & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-extra/features/vue-cli:2": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// 5432: PostgreSQL, 8080: User Service, 8081: Auth Service, 8082: BFF, 3000: Frontend
	"forwardPorts": [5432, 8080, 8081, 8082, 3000],

	"customizations": {
		"vscode": {
			"extensions": [
				"cweijan.vscode-postgresql-client2",
				"vscjava.vscode-java-pack",
				"vscjava.vscode-maven",
				"Vue.volar",
				"GitHub.copilot-chat"
			]
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "chmod +x .devcontainer/setup-auth-db.sh && .devcontainer/setup-auth-db.sh",

	"containerEnv": {
		"POSTGRES_PASSWORD": "postgres"
	}
}
